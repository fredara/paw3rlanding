---
import Layout from '../layouts/Layout.astro';
const STORE_URL = 'https://paw3r.com/';
const franelalink = 'https://paw3r.com/collections/pawer-x-cfc-jugadores-copia/products/multitud-copy';
const mujereslink = 'https://paw3r.com/collections/women/products/multitud-tanky?variant=42555600306310';
const sportlink = 'https://paw3r.com/collections/pawer-x-cfc-jugadores-copia/products/distinguido';
const accesorioslink = 'https://paw3r.com/collections/pawer-x-cfc-jugadores-copia/products/fine-crop-top-copy';
const url_collection = 'https://paw3r.com/collections/colab';
const comprar_url = 'https://paw3r.com/collections/random';
---

<Layout title="PAW3R — La Que Frao.">
  <!-- Language switcher -->
  <header class="fixed top-0 left-0 right-0 z-50 px-4 py-3 md:px-6 md:py-4 bg-paw-black/80 backdrop-blur-md border-b border-paw-black/5">
    <div class="max-w-6xl mx-auto flex items-center justify-between">
      <a href="/" class="logo-link inline-block hover:opacity-80 transition-opacity duration-300" aria-label="PAW3R home">
        <img src="/images/logopawer.avif" alt="PAW3R" class="logo-link-img h-8 md:h-10 w-auto object-contain transition-transform duration-500 ease-in-out" width="120" height="40" />
      </a>
      <nav class="flex items-center gap-1 md:gap-2" role="tablist" aria-label="Idioma">
        <button type="button" data-lang-btn="es" class="lang-btn px-3 py-1.5 rounded-full text-sm font-medium bg-paw-white text-paw-black hover:scale-105 hover:shadow-lg active:scale-95 transition-all duration-200" aria-pressed="true">ES</button>
        <button type="button" data-lang-btn="en" class="lang-btn px-3 py-1.5 rounded-full text-sm font-medium bg-paw-white/10 text-paw-white hover:bg-paw-white hover:text-paw-black hover:scale-105 hover:shadow-lg active:scale-95 transition-all duration-200 border border-paw-white/20" aria-pressed="false">EN</button>
        <button type="button" data-lang-btn="ugo" class="lang-btn lang-btn-ugo lang-btn-ugo-bounce px-3 py-1.5 rounded-full text-sm font-medium bg-paw-white/10 text-paw-white hover:bg-paw-white hover:text-paw-black hover:scale-105 hover:shadow-lg active:scale-95 transition-all duration-200 flex items-center gap-1 border border-paw-white/20" aria-pressed="false">
          <img src="/images/ugologo.avif" alt="" class="lang-btn-ugo-img w-5 h-5 rounded-full object-cover ring-2 ring-transparent hover:ring-paw-accent transition-all flex-shrink-0" width="20" height="20" /> Ugo
        </button>
      </nav>
    </div>
  </header>

  <main class="pt-2 md:mt-16">
    <!-- Hero / Intro -->
    <section class="relative min-h-[85vh] md:min-h-[90vh] flex items-center justify-start px-4 overflow-hidden bg-gradient-to-b from-paw-black to-paw-white/5">
      <div class="absolute inset-0 img-zoom">
        <img src="/images/referenciamovil.png" alt="" class="md:hidden w-full h-full object-cover opacity-25 hover:opacity-60 transition-opacity duration-500" />
        <img src="/images/referencia.png" alt="" class="hidden md:block w-full h-full object-cover opacity-50 hover:opacity-60 transition-opacity duration-500" />
      </div>
      <div class="relative z-10 text-center max-w-3xl stagger-children md:pl-16">
        <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold font-display tracking-tight mb-4 text-white md:text-paw-black/80" style="font-family: var(--font-display);">
          <span data-lang="es">Marcando la Pauta.</span>
          <span data-lang="en">The One Who F*cks.</span>
          <span data-lang="ugo">Soy UGO, esto es PAW3R.</span>
        </h1>
        <p class="text-lg md:text-xl text-white md:text-paw-black/80 mb-8">
          <span data-lang="es">Caracas, Venezuela. Creando un lifestyle para todo el mundo.</span>
          <span data-lang="en">Caracas, Venezuela. Building a lifestyle for everyone.</span>
          <span data-lang="ugo">caraqueños de corazón, venezolano ante todo. Armando el lifestyle pa' que la gente viva fino.</span>
        </p>
        <a href={STORE_URL} target="_blank" rel="noopener noreferrer" class="btn-store-hero inline-block px-8 py-4 bg-paw-black text-paw-white font-semibold rounded-full hover-lift hover:text-paw-white hover:border-paw-white/40 transition-all duration-500 btn-bounce border-2 border-paw-black">
          <span data-lang="es">Ir a la tienda</span>
          <span data-lang="en">Go to the store</span>
          <span data-lang="ugo">A Que no le das Aquí</span>
        </a>
      </div>
    </section>

    <!-- Who we are -->
    <section class="py-16 md:py-24 px-4 bg-paw-black text-paw-white">
      <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12 items-center">
        <div class="img-zoom rounded-2xl overflow-hidden hover-scale">
          <img src="/images/hombre.png" alt="PAW3R style" class="w-full h-auto object-cover aspect-[4/5]" width="600" height="750" />
        </div>
        <div>
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6" style="font-family: var(--font-display);">
            <span data-lang="es">No somos una tienda cualquiera</span>
            <span data-lang="en">We're not your average store</span>
            <span data-lang="ugo">Aquí no vendemos cualquier vaina</span>
          </h2>
          <p class="text-paw-white/85 text-lg mb-6">
            <span data-lang="es">Desde 2017 sacamos franelas, joggers, accesorios y collabs que la gente realmente quiere usar. Casual, sport, playa — y siempre con personalidad única y fina.</span>
            <span data-lang="en">Since 2017 we've been making tees, joggers, accessories and collabs people actually want to wear. Casual, sport, beach — always with personality.</span>
            <span data-lang="ugo">Desde el 2017 sacamos franelas, joggers y vainas que uno sí se pone. Casual, sport, playa, dingi — todo con personalidad, nada de aburrido.</span>
          </p>
          <a href={url_collection} target="_blank" rel="noopener noreferrer" class="btn-store-hero inline-block px-6 py-3 bg-paw-white text-paw-black font-semibold rounded-full hover-lift hover:text-paw-white hover:border-paw-white/40 transition-all duration-500 btn-bounce border-2 border-paw-black">
            <span data-lang="es">Ver colección</span>
            <span data-lang="en">See collection</span>
            <span data-lang="ugo">Echarle un ojo a la cole</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Product teasers - grid with hovers -->
    <section class="py-16 md:py-24 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 md:mb-16" style="font-family: var(--font-display);">
          <span data-lang="es">Un poco de lo que hacemos</span>
          <span data-lang="en">A taste of what we do</span>
          <span data-lang="ugo">Un poquito de lo que armamos</span>
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
          <a href={franelalink} target="_blank" rel="noopener noreferrer" class="product-card group block rounded-3xl overflow-hidden border-2 border-paw-black/10 hover:border-paw-accent hover:shadow-xl hover:shadow-paw-accent/20 hover-lift hover:-translate-y-1 bg-paw-white transition-all duration-300">
            <div class="product-card-img aspect-[3/4] overflow-hidden">
              <img src="/images/camisa.png" alt="Franelas" class="w-full h-full object-cover" width="300" height="400" />
            </div>
            <div class="p-4 text-center group-hover:bg-paw-black/5 transition-colors duration-300">
              <span class="font-semibold group-hover:text-paw-accent transition-colors">
                <span data-lang="es">Franelas</span>
                <span data-lang="en">Tees</span>
                <span data-lang="ugo">Franelas pa' chamizar</span>
              </span>
            </div>
          </a>
          <a href={mujereslink} target="_blank" rel="noopener noreferrer" class="product-card group block rounded-3xl overflow-hidden border-2 border-paw-black/10 hover:border-paw-accent2 hover:shadow-xl hover:shadow-paw-accent2/20 hover-lift hover:-translate-y-1 bg-paw-white transition-all duration-300">
            <div class="product-card-img aspect-[3/4] overflow-hidden">
              <img src="/images/mujerreferencia.png" alt="Mujeres" class="w-full h-full object-cover" width="300" height="400" />
            </div>
            <div class="p-4 text-center group-hover:bg-paw-black/5 transition-colors duration-300">
              <span class="font-semibold group-hover:text-paw-accent2 transition-colors">
                <span data-lang="es">Para ellas</span>
                <span data-lang="en">For her</span>
                <span data-lang="ugo">Pa' las gatas</span>
              </span>
            </div>
          </a>
          <a href={sportlink} target="_blank" rel="noopener noreferrer" class="product-card group block rounded-3xl overflow-hidden border-2 border-paw-black/10 hover:border-paw-accent3 hover:shadow-xl hover:shadow-paw-accent3/20 hover-lift hover:-translate-y-1 bg-paw-white transition-all duration-300">
            <div class="product-card-img aspect-[3/4] overflow-hidden">
              <img src="/images/referenciacamisa.png" alt="Sport" class="w-full h-full object-cover" width="300" height="400" />
            </div>
            <div class="p-4 text-center group-hover:bg-paw-black/5 transition-colors duration-300">
              <span class="font-semibold group-hover:text-paw-accent3 transition-colors">
                <span data-lang="es">Sport</span>
                <span data-lang="en">Sport</span>
                <span data-lang="ugo">Sport pa' que la gente se mueva</span>
              </span>
            </div>
          </a>
          <a href={accesorioslink} target="_blank" rel="noopener noreferrer" class="product-card group block rounded-3xl overflow-hidden border-2 border-paw-black/10 hover:border-paw-black hover:shadow-xl hover-lift hover:-translate-y-1 bg-paw-white transition-all duration-300">
            <div class="product-card-img aspect-[3/4] overflow-hidden">
              <img src="/images/referenciamujer.png" alt="Accesorios" class="w-full h-full object-cover" width="300" height="400" />
            </div>
            <div class="p-4 text-center group-hover:bg-paw-black/5 transition-colors duration-300">
              <span class="font-semibold group-hover:text-paw-black transition-colors">
                <span data-lang="es">Accesorios</span>
                <span data-lang="en">Accessories</span>
                <span data-lang="ugo">Vainas pa' ponerte</span>
              </span>
            </div>
          </a>
          <span data-lang="es"> y si... nuestro modelo es Ugo </span>
          <span data-lang="en"> and if... our model is Ugo </span>
          <span data-lang="ugo"> y si... botamos a los modelos </span>
        </div>
      </div>
    </section>

    <!-- Ugo / mascot block -->
    <section class="py-16 md:py-24 px-4 bg-paw-black text-paw-white">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block mb-6 hover-scale">
          <img src="/images/ugologo.avif" alt="Ugo" class="w-24 h-24 md:w-32 md:h-32 rounded-full object-cover border-4 border-paw-accent mx-auto" width="128" height="128" />
        </div>
        <h2 class="text-2xl md:text-3xl font-bold mb-4" style="font-family: var(--font-display);">
          <span data-lang="es">¿Quién es Ugo?</span>
          <span data-lang="en">Who's Ugo?</span>
          <span data-lang="ugo">¡Yo soy Ugo, marico!</span>
        </h2>
        <p class="text-paw-white/85 text-lg mb-8 max-w-2xl mx-auto">
          <span data-lang="es">La mascota de PAW3R. Un gorila caraqueño con estilo. Si lo ves por la tienda, no dudes en saludarlo.</span>
          <span data-lang="en">PAW3R's mascot. A Caracas gorilla with style. If you see him at the store, say hi.</span>
          <span data-lang="ugo">El gorila de la marca, caraqueño y sifrino. Si me ves por La Cueva, me saludas y te cuento unos chistes.</span>
        </p>
        <a href={comprar_url} target="_blank" rel="noopener noreferrer" class="btn-store-hero inline-block px-8 py-4 bg-paw-accent text-paw-black font-bold rounded-full hover-lift hover:text-paw-white hover:border-paw-white/40 transition-all duration-500 btn-bounce border-2 border-paw-black">
          <span data-lang="es">Comprar en paw3r.com</span>
          <span data-lang="en">Shop at paw3r.com</span>
          <span data-lang="ugo">dale, solo high level</span>
        </a>
      </div>
    </section>

    <!-- Big CTA -->
    <section class="py-20 md:py-32 px-4 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-paw-accent/20 via-paw-white to-paw-accent2/20" />
      <div class="relative z-10 max-w-3xl mx-auto text-center">
        <h2 class="text-4xl md:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
          <span data-lang="es">¿Listo para sumarte?</span>
          <span data-lang="en">Ready to join?</span>
          <span data-lang="ugo">¿Listo pa' estar fino?</span>
        </h2>
        <p class="text-xl text-paw-black/80 mb-10">
          <span data-lang="es">Todo está en la web. Delivery Caracas, envío nacional y tiendas en Venezuela.</span>
          <span data-lang="en">Everything's on the site. Caracas delivery, nationwide shipping and stores across Venezuela.</span>
          <span data-lang="ugo">Todo está en la web. Delivery en Caracas, envío nacional y las Cuevas por ahí.</span>
        </p>
        <a href={STORE_URL} target="_blank" rel="noopener noreferrer" class="btn-store-hero inline-block px-10 py-5 bg-paw-black text-paw-white text-lg font-bold rounded-full hover-lift hover:text-paw-white hover:border-paw-white/40 transition-all duration-500 btn-bounce border-4 border-paw-black shadow-lg">
          <span data-lang="es">Ir a paw3r.com</span>
          <span data-lang="en">Go to paw3r.com</span>
          <span data-lang="ugo">Dale pues</span>
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-16 px-4 bg-paw-black text-paw-white/70 text-center text-sm">
      <p>
        <span data-lang="es">Est. 2017 · Caracas, Venezuela</span>
        <span data-lang="en">Est. 2017 · Caracas, Venezuela</span>
        <span data-lang="ugo">Desde el 2017 · Venezuela</span>
      </p>
      <a href={STORE_URL} target="_blank" rel="noopener noreferrer" class="text-paw-accent hover:underline mt-2 inline-block">paw3r.com</a>
      <p class="mt-4 text-paw-white/50 text-xs">
        <span data-lang="es">Desarrollado por</span>
        <span data-lang="en">Developed by</span>
        <span data-lang="ugo">Hecho por</span>
        <a href="https://github.com/fredara" target="_blank" rel="noopener noreferrer" class="footer-dev-link inline-block ml-1 text-paw-accent font-medium">Ing. Freddy Ramirez Dev</a>
      </p>
    </footer>
  </main>

  <script>
    (function () {
      const store = (key, value) => {
        try { localStorage.setItem(key, value); } catch (_) {}
      };
      const read = (key) => {
        try { return localStorage.getItem(key); } catch (_) { return null; }
      };
      const LANG_KEY = 'pawer-lang';
      const body = document.body;
      const buttons = document.querySelectorAll('[data-lang-btn]');

      const setLang = (lang) => {
        body.setAttribute('data-lang', lang);
        store(LANG_KEY, lang);
        buttons.forEach((btn) => {
          const isActive = btn.getAttribute('data-lang-btn') === lang;
          btn.setAttribute('aria-pressed', String(isActive));
          if (isActive) {
            btn.classList.add('bg-paw-white', 'text-paw-black');
            btn.classList.remove('bg-paw-white/10', 'text-paw-white', 'border', 'border-paw-white/20');
          } else {
            btn.classList.remove('bg-paw-white', 'text-paw-black');
            btn.classList.add('bg-paw-white/10', 'text-paw-white', 'border', 'border-paw-white/20');
          }
        });
      };

      const saved = read(LANG_KEY);
      if (saved === 'es' || saved === 'en' || saved === 'ugo') setLang(saved);
      else setLang('es');

      buttons.forEach((btn) => {
        btn.addEventListener('click', () => {
          const lang = btn.getAttribute('data-lang-btn');
          if (lang === 'es' || lang === 'en' || lang === 'ugo') setLang(lang);
        });
      });
    })();
  </script>
</Layout>
